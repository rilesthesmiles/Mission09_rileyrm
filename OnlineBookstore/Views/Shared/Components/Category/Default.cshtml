@{
}
@model IEnumerable<string>

<!--I added some bootstrap here to make the category outlines more prominent with the background image-->
<div class="d-grid gap-4 gap-lg-4">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum ="1" class="btn btn-outline-secondary" style="color: black; border: 2px solid black; margin-bottom: 10px;"><b>Home</b></a>
    <br />
   

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")" style="color: black; border: 2px solid black; margin-bottom: 10px;"><b>@c</b></a>
        <br />
       

    }
   
</div>